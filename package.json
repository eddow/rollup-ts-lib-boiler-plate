{
	"name": "rollup-ts-lib-boiler-plate",
	"version": "1.0.0",
	"scripts": {
		"test": "jest",
		"test:coverage": "jest --coverage",
		"build": "rollup -c",
		"watch": "rollup -c -w",
		"biome": "biome check --write",
		"lint": "biome check",
		"prepack": "npm run lint && npm run test && npm run build"
	},
	"keywords": [
		"boiler-plate"
	],
	"main": "./lib/server.ts",
	"types": "./lib/server.d.ts",
	"exports": {
		"./biome": "./biome.json",
		".": {
			"browser": {
				"import": "./lib/client.mjs",
				"require": "./lib/client.js",
				"types": "./lib/client.d.ts"
			},
			"node": {
				"import": "./lib/server.mjs",
				"require": "./lib/server.js",
				"types": "./lib/server.d.ts"
			}
		},
		"./src": {
			"browser": "./src/client.ts",
			"node": "./src/server.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/eeddow/rollup-ts-lib-boiler-plate.git"
	},
	"description": "Boiler plate for server/client library with rollup, typescript and jest",
	"type": "module",
	"author": "Fran√ßois Marie <eeddow@gmail.com>",
	"license": "ISC",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@types/jest": "^29.5.12",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"jest": "^29.7.0",
		"rollup": "^4.18.0",
		"rollup-plugin-dts": "^6.1.0",
		"rollup-plugin-typescript": "^1.0.1",
		"ts-jest": "^29.1.2",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.12.2"
	}
}
